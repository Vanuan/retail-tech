{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "../",
    "paths": {
      "@vst/vocabulary-types": ["../vocabulary-types/index.ts"],
      "@vst/vocabulary-actions": ["../vocabulary-actions/index.ts"],
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
}
