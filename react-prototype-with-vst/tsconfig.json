{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": ["./*"],
      "@vst/session": ["./lib/vst/session/index.ts"],
      "@vst/fluent": ["./vst-library/fluent/src/index.ts"],
      "@vst/vocabulary-types": ["./vst-library/vocabulary-types/index.ts"],
      "@vst/vocabulary-actions": ["./vst-library/vocabulary-actions/index.ts"],
      "@vst/vocabulary-logic": ["./vst-library/vocabulary-logic/index.ts"],
      "@vst/placement-core": ["./vst-library/placement-core/index.ts"],
      "@vst/placement-models": ["./vst-library/placement-models/index.ts"],
      "@vst/data-access": ["./vst-library/data-access/index.ts"],
      "@vst/retail-logic": ["./vst-library/retail-logic/src/index.ts"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
