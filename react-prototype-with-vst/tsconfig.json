{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": ["./*"],
      "@vst/session": ["./lib/vst/session/index.ts"],
      "@vst/vocabulary-types": ["../vst-library/vocabulary-types/index.ts"],
      "@vst/vocabulary-actions": ["../vst-library/vocabulary-actions/index.ts"],
      "@vst/utils": ["./lib/vst/utils/index.ts"],
      "@vst/placement-models": [
        "./lib/vst/implementations/placement-models/interface.ts",
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
